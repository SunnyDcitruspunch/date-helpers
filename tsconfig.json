{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib",
    "sourceMap": true,
    "jsx": "react",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~*": ["./*"]
    }
  },
  "lib": ["es6", "es2017.string"],
  "include": [
    "./src/"
  ],
  "exclude": ["./src/**/*.test.ts"]
}
